@section scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>

    <script>
        var skip = 0;
        $(".nextpage1").click(function () {
            skip = 0;
            $.ajax({
                url: "/Blog/Pagenation?skip=" + skip,
                method: "GET",
                success: function (res) {
                    $(".service-wrapper").children().remove();
                    $(".service-wrapper").append(res);
                    $(".pagination-list").children().removeClass("active");
                    $(".nextpage1").parent().addClass("active");
                }
            })
        });
        $(".nextpage2").click(function () {
            skip = 3;
